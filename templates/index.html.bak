{{ define "index" }}
<!DOCTYPE html>
<html>
<head>
<!-- http://www.w3schools.com/html/html_tables.asp -->
    <title>{{ .Title }}</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th, td {
            padding: 5px;
        }
    </style>
</head>

<h1>{{ .Heading }}</h1>

<ul>
{{ range $item := .SliceItems }}
  {{ if eq $item "Google" }}
  <li><b>{{ $item }}</b></li>
  {{ else }}
  <li>{{ $item }}</li>
  {{ end }}
{{ end }}
</ul>

<table style="width:100%">
  <tr>
    <th>Juice</th>
    <th>Price</th>
  </tr>
{{ range $item, $price := .MapItems }}
  <tr>
    <td>{{ $item }}</td>
    <td>{{ $price }}</td>
  </tr>
{{ end }}
</table>

</html>

{{ end }}
